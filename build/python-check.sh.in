#!/bin/sh -x

PEP8="@PEP8@"
PYFLAKES="@PYFLAKES@"
ISORT="@ISORT@"
SRCDIR="$(dirname "$0")/.."

cd "${SRCDIR}"

ret=0
FILES="$(
	find build packaging -name '*.py' | while read f; do
		[ -e "${f}.in" ] || echo "${f}"
	done
)"

for exe in "${PYFLAKES}" "${PEP8}"; do
	if ! which "${exe}" > /dev/null 2>&1; then
		echo "WARNING: tool '${exe}' is missing" >&2
	else
		"${exe}" ${FILES} || ret=1
	fi
done

if ! which "${ISORT}" > /dev/null 2>&1; then
    echo "WARNING: tool '${ISORT}' is missing" >&2
else
    "${ISORT}" --check ${FILES} || ret=1
fi

exit ${ret}
