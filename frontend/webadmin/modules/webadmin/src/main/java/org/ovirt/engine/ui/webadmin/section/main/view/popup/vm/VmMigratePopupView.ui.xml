<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
    xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
    xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants'/>

    <ui:style>
        .errorLabel, .differentClusterWarning {
            color: #CD2127;
        }

        .differentClusterWarning {
            font-weight: bold;
        }

        .container {
            width: 100%;
        }
    </ui:style>

    <d:SimpleDialogPanel width="400px" height="310px">
        <d:content>
            <b:Container addStyleNames="{style.container}">
                <b:Row>
                    <b:Column size="SM_12">
                        <ge:EntityModelRadioButtonEditor ui:field="selectHostAutomaticallyEditor" label="{constants.vmMigratePopupSelectHostAutomaticallyLabel}" usePatternFly="true" removeFormGroup="true" />
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="SM_12">
                        <ge:EntityModelRadioButtonEditor ui:field="selectDestinationHostEditor" label="{constants.vmMigratePopupSelectDestinationHostLabel}" usePatternFly="true" removeFormGroup="true" />
                    </b:Column>
                </b:Row>
                <b:Row>
                    <e:ListModelListBoxEditor ui:field="hostsListEditor" label="{constants.vmMigratePopupHostsListLabel}" usePatternFly="true" labelColSize="SM_4" widgetColSize="SM_8" />
                </b:Row>
                <d:AdvancedParametersExpander ui:field="advancedOptionsExpander"/>
                <g:FlowPanel ui:field="advancedOptionsExpanderContent">
                    <b:Row>
                        <b:Column size="SM_12">
                            <g:Label text="{constants.migrationToDifferentClusterWarning}" addStyleNames="{style.differentClusterWarning}" />
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <e:ListModelListBoxEditor ui:field="clustersEditor" label="{constants.hostClusterVmPopup}" usePatternFly="true" labelColSize="SM_4" widgetColSize="SM_8" />
                    </b:Row>
                </g:FlowPanel>
                <b:Row>
                    <b:Column size="SM_12">
                        <g:Label ui:field="message1" addStyleNames="{style.errorLabel}" />
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="SM_12">
                        <g:Label ui:field="message2" />
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="SM_12">
                        <g:Label ui:field="message3" addStyleNames="{style.errorLabel}" />
                    </b:Column>
                </b:Row>
            </b:Container>
        </d:content>
    </d:SimpleDialogPanel>

</ui:UiBinder>
