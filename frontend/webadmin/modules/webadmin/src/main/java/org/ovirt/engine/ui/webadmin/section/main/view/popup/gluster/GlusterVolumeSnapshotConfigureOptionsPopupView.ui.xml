<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
    xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
    xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants'/>

    <ui:style>
        .headerLabel {
            font-weight: bold;
        }

        .container {
            width: 100%;
        }
    </ui:style>

    <d:SimpleDialogPanel width="550px" height="400px">
        <d:content>
            <b:Container addStyleNames="{style.container}">
                <b:Row>
                    <ge:StringEntityModelLabelEditor ui:field="clusterNameEditor" label="{constants.volumeClusterLabel}" usePatternFly="true" labelColSize="SM_4" widgetColSize="SM_8" />
                </b:Row>
                <b:Row>
                    <ge:StringEntityModelLabelEditor ui:field="volumeNameEditor" label="{constants.volumeNameLabel}" usePatternFly="true" labelColSize="SM_4" widgetColSize="SM_8" />
                </b:Row>
                <b:Row>
                    <b:Column size="SM_12">
                        <g:Label ui:field="snapshotConfigHeader" text="{constants.snapshotConfigHeaderLabel}" addStyleNames="{style.headerLabel}" />
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="SM_12">
                        <e:EntityModelCellTable ui:field="configsTable" />
                    </b:Column>
                </b:Row>
            </b:Container>
        </d:content>
    </d:SimpleDialogPanel>

</ui:UiBinder>
