<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:t="urn:import:org.ovirt.engine.ui.common.widget.tooltip">

    <ui:style type="org.ovirt.engine.ui.common.widget.action.SimpleActionButton.Style">
        .actionButton {
            float: left;
            font-size: 11px;
            color: #333333;
            background: transparent;
            border: 1px solid transparent;
            padding: 1px 5px 1px 5px
        }

        .buttonMouseOver {
            border: 1px solid #AAAAAA;
            cursor: pointer;
        }

        .buttonMouseOut {
            border: 1px solid transparent;
        }
    </ui:style>

    <t:WidgetTooltip ui:field="buttonTooltip">
        <g:ToggleButton ui:field="button" addStyleNames="{style.actionButton}" />
    </t:WidgetTooltip>

</ui:UiBinder>
