<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:axon="http://www.axonframework.org/schema/core"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <axon:event-bus id="eventBus"/>

    <axon:event-bus id="eventBusTerminal" terminal="terminal"/>

    <bean id="terminal" class="org.axonframework.spring.testutils.MockitoMockFactoryBean">
        <property name="mockType" value="org.axonframework.eventhandling.PublicationStrategy"/>
    </bean>
</beans>