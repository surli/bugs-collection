#%RAML 1.0
title: myapi
baseUri: api
mediaType: application/json
securitySchemes:
  oauth2:
    type: OAuth 2.0
    description: OAuth 2.0 Authentication
    displayName: OAuth 2.0 Auth
    settings:
      authorizationUri: https://accounts.google.com/o/oauth2/auth
      accessTokenUri: https://accounts.google.com/o/oauth2/token
      authorizationGrants:
      - authorization_code
      - client_credentials
      - password
      - implicit
      scopes:
      - openid
      - session
      - read
      - write
types:
  Person:
    type: object
  Manager:
    type: Person
/persons:
  displayName: Persons handling
  get:
    displayName: Persons
    description: Get all persons
    securedBy: null
    queryParameters: 
      testX: 
        displayName: testX
        type: string
        default: def_value
        minLength: 3
        maxLength: 10
      testY: integer
    protocols: HTTP
    headers:
      Accept:
        description: Response type acceptable by client
        required: false
        default: application/json
        type: string
    responses: 
      200:
        description: Successful response
        body: 
          application/json:
            schema: Person
  post:
    description: Create new person
    securedBy: oauth2
    body: 
      application/json:
        type: Person
/managers: